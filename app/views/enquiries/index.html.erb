<section class="generalSec">
  <div class="white">
    <div class="container">
      <h4>List Enquiries</h4>
        <div class="twelve columns">
          <table>
            <thead>
              <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Reason</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Meeting Date</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @enquiries.each do |enquiry| %>
                <tr>
                  <td><%= enquiry.first_name %></td>
                  <td><%= enquiry.last_name %></td>
                  <td><%= enquiry.reason %></td>
                  <td><%= enquiry.email %></td>
                  <td><%= enquiry.phone %></td>
                  <td><%= enquiry.meeting_date %></td>
                  <td><%= link_to 'Show', enquiry %></td>
                  <td><%= link_to 'Edit', edit_enquiry_path(enquiry) %></td>
                  <td><%= link_to 'Destroy', enquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
          <%= link_to 'New Enquiry', new_enquiry_path %>
      </div>
    </div>
  </div>
</section>